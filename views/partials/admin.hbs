
<section class="adminSection">
  <div class="adminDiv">
    <div class="adminTitle">
      <p class="admin">Admin Panel</p>
    </div>
    <form id="formAdminAdd" method="POST" action="/admin">
      <div class="mealTime">
      <p class="mealTimeName">Add dish</p>
      <p class="mealTimeName red">All fields are required!!!</p>
      </div>
      <div class="mealTitle">
        <select name="mealTime" class="mealTimeName">
          <!--Supplement an id here instead of using 'name'-->
          <option class="mealTimeName" value="Breakfast" selected> Завтрак </option>
          <option class="mealTimeName" value="Lunch">Обед</option>
          <option class="mealTimeName" value="Supper">Ужин</option>
          <option class="mealTimeName" value="Snack">Перекус</option>
        </select>
        <div class="firstMealInput forDisplayDontTouchBeach">
          <input class="cuteInputsByNurbek" type="text" placeholder="Название блюда" name="title" required
            pattern="^[А-Яа-яЁё\s]+$">
          <input class="cuteInputsByNurbek" type="number" placeholder="Вес в гр" name="weight" required pattern="\d">
          <input class="cuteInputsByNurbek" type="number" placeholder="Каллорийность" name="kall" required pattern="\d">
        </div>
        <div class="secondMealInput forDisplayDontTouchBeach">
          <input class="cuteInputsByNurbek" type="number" placeholder="Белки " name="proteins" required pattern="\d">
          <input class="cuteInputsByNurbek" type="number" placeholder="Жиры" name="fats" required pattern="\d">
          <input class="cuteInputsByNurbek" type="number" placeholder="Углеводы" name="carbohydrates" required
            pattern="\d">
        </div>
        <button class="btnByNurbek">Submit</button>
      </div>
    </form>
  </div>
</section>